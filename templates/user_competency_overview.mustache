{{!
    @template 'block_learningplans_dashboard';      // Full name of the plugin (used for diagnostics)/main

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}

<div class="col">
    {{#cohorts}}
        {{#users}}
            <div class="col p-2 border-bottom">
                <div class="row vertical-align align-middle items-center">
                    <div class="col-1">
                        {{{picture}}}
                    </div>
                    <div class="col">
                        <span class="align-middle bold">{{firstname}} {{lastname}}</span>
                    </div>
                    <div class="col-2 align-right text-right">
                        <a href="{{editUrl}}" class="btn btn-primary float-sm-end float-end ms-1 mb-2">
                            {{#str}}editstring, block_learningplans_dashboard{{/str}}
                        </a>
                    </div>
                </div>
                <div class="row">
                    {{#plans}}
                        <div class="row">
                            {{name}}
                        </div>
                        <div class="row">
                            {{#str}}sumstring, block_learningplans_dashboard, {"proficiency":"{{proficiency}}",
                                "competencies":"{{competency}}"}
                            {{/str}}
                        </div>
                    {{/plans}}

                </div>
            </div>
        {{/users}}
    {{/cohorts}}
</div>